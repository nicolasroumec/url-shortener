{{#if urlDB}}
  <form action="/edit/{{urlDB._id}}" method="post">
    <input
      value="{{urlDB.origin}}"
      type="text"
      placeholder="Enter URL"
      name="origin"
      class="form-control my-2"
    />
    <button type="submit" class="btn btn-warning w-100 mb-2">Edit URL</button>
  </form>
{{else}}
  <form action="/" method="post">
    <input
      type="text"
      placeholder="Enter URL"
      name="origin"
      class="form-control my-2"
    />
    <button type="submit" class="btn btn-primary w-100 mb-2">Add URL</button>
  </form>
{{/if}}